SRCS    =	main.cpp \
			Ameteria.cpp \
			Cure.cpp \
			Ice.cpp \
			Character.cpp \
			ICharacter.cpp \
			IMateriaSource.cpp \
			MateriaSource.cpp \

OBJS    =   ${SRCS:.c=.o}
RM      =   rm -f
CFLAGS  =   -Wall -Wextra -Werror -std=c++98
NAME	= 	a.out

.c.o:
		c++ ${CFLAGS} -c $< -o $@
${NAME}:	${OBJS}
	c++ ${CFLAGS} ${OBJS} -o ${NAME}
all:	${NAME}
clean:
	${RM} ${NAME}
fclean: clean
	${RM} ${NAME}
re:	fclean all
.PHONY: bonus all clean fclean re